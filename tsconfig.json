{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": "./src",
    "paths": {
      "layout/*": ["layout/*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "styles/*": ["styles/*"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "src/**/*.{ts,tsx}"],
  "exclude": ["node_modules"]
}
