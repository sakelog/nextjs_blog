{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "layout/*": ["layout/*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@scripts/*": ["scripts/*"],
      "@template/*": ["template/*"],
      "@state/*": ["state/*"],
      "@styles/*": ["styles/*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/lib/setSitemap.ts",
    "src/layout/IndexLayout"
  ],
  "exclude": ["node_modules"]
}
