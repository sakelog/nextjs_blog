{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@layout/*": ["layout/*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@scripts/*": ["scripts/*"],
      "@template/*": ["template/*"],
      "@state/*": ["state/*"],
      "@styles/*": ["styles/*"],
      "@styles/layout/*": ["styles/Layout/*"],
      "@styles/project/*": ["styles/Object/Project/*"],
      "@styles/component/*": ["styles/Object/Component/*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/lib/setSitemap.ts"
  ],
  "exclude": ["node_modules"]
}
